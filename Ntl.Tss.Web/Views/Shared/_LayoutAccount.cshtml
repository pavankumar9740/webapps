@using IdentityServer4.Extensions
@{
    string name = null;
    if (!true.Equals(ViewData["signed-out"]))
    {
        name = Context.User?.GetDisplayName();
    }
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>NTL tax stamp solutions</title>
    <link rel="icon" type="image/x-icon" href="~/favicon.ico" />
    <link rel="shortcut icon" type="image/x-icon" href="~/favicon.ico" />
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div class="loginform-container">
        <div class="loginform-left">
            <div class="loginbox">
                <div class="logo-section">
                    <img src="~/images/ntl-logo-new.png" width="140px">
                </div>
                <div>
                    @RenderBody()
                </div>
                <div class="login-footer">Nationwide Technologies LTD</div>
            </div>
        </div>
        <div class="loginform-right">
            <h2>Unique Identities</h2>
            <h4>Brand Protection and Anti-Counterfeit Solutions</h4>
            <div class="video-section">
                <iframe width="560" height="315" src="https://www.youtube.com/embed/lCN6FjqDcHg" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/jquery.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>